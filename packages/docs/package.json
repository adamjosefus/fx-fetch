{
  "name": "docs",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run build:typedoc && pnpm run build:astro",
    "build:astro": "astro build",
    "build:typedoc": "bun run ./bin/build-api-reference.ts",
    "dev": "astro dev",
    "fmt": "biome check . --error-on-warnings",
    "fmt:write": "biome check . --write --error-on-warnings",
    "preview": "astro preview",
    "validate": "astro sync && tsc"
  },
  "dependencies": {
    "@astrojs/starlight": "^0.37.1",
    "@expressive-code/plugin-line-numbers": "^0.41.5",
    "@types/node": "^24",
    "astro": "^5.16.6",
    "effect": "^3",
    "expressive-code-twoslash": "^0.5.3",
    "fx-fetch": "workspace:*",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@/shared": "workspace:*",
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.5",
    "bun": "^1.3.5",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  }
}
