{
  "name": "website",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run build:typedoc && pnpm run build:astro",
    "build:astro": "astro check && astro build",
    "build:typedoc": "bun run ./bin/build-api-reference.ts",
    "dev": "astro dev",
    "fmt": "biome check . --error-on-warnings",
    "fmt:write": "biome check . --write --error-on-warnings",
    "preview": "astro preview",
    "validate": "astro check"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/starlight": "^0.37.3",
    "@expressive-code/plugin-collapsible-sections": "^0.41.6",
    "@expressive-code/plugin-line-numbers": "^0.41.6",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@types/node": "^24",
    "astro": "^5.16.11",
    "effect": "^3",
    "expressive-code-twoslash": "^0.5.3",
    "fx-fetch": "workspace:*",
    "sharp": "^0.34.5",
    "starlight-blog": "^0.25.2"
  },
  "devDependencies": {
    "@/shared": "workspace:*",
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.6",
    "bun": "^1.3.6",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  }
